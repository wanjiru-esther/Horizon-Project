package horizenPizza;

//Creates MenuItem that gets used in PizzaRestaurantMenu
public class MenuItem {
	String name;
	double price;

	public MenuItem(String name, double price) {
		this.name = name;
		this.price = price;
	}

	@Override
	public String toString() {
		return name + " ($" + String.format("%.2f", price) + ")";
	}
}
